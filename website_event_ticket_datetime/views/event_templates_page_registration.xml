<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Event - Registration -->
    <template id="registration_template_ticket_datetime" inherit_id="website_event.registration_template">
        <xpath expr="//t[@t-if='event.start_sale_date and event.start_sale_date &gt; datetime.date.today()']" position="attributes">
            <attribute name="t-if">
                event.start_sale_date and event.start_sale_date &gt; datetime.datetime.now()
            </attribute>
        </xpath>
        <xpath expr="//t[@t-esc='event.start_sale_date']" position="attributes">
            <attribute name="t-options">{'widget': 'datetime', 'format': 'short'}</attribute>
        </xpath>
    </template>
</odoo>
