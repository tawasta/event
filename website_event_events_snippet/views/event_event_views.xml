<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_event_form_promoted">
        <field name="name">event.event.form.promoted</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="is_promoted" />
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="view_event_tree_promoted">
        <field name="name">event.event.tree.promoted</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_tree" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="is_promoted" optional="show" />
            </field>
        </field>
    </record>
</odoo>
