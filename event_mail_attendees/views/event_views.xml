<?xml version="1.0"?>
<odoo>
    <!-- EVENT.EVENT VIEWS -->
    <record id="view_event_form_mail_attendees" model="ir.ui.view">
        <field name="name">event.event.form.mail.attendees</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_message_attendees" string="Contact Attendees" type="object" class="oe_highlight" attrs="{'invisible': [('seats_expected', '=', 0)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
