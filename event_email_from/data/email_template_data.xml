<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'event'), ('name', '=', 'event_registration_mail_template_badge')]"/>
            </function>
            <value eval="{'noupdate': False}" />
        </function>
        
        <record id="website_event_waiting_list.event_waiting" model="mail.template">
               <field name="email_from">${(object.event_id.sender_email or '') | safe}</field>
        </record>
        <record id="website_event_waiting_list.event_confirm_waiting_registration" model="mail.template">
               <field name="email_from">${(object.event_id.sender_email or '') | safe}</field>
        </record>
        <record id="event.event_subscription" model="mail.template">
               <field name="email_from">${(object.event_id.sender_email or '') | safe}</field>
        </record>
        <record id="event.event_reminder" model="mail.template">
               <field name="email_from">${(object.event_id.sender_email or '') | safe}</field>
        </record>
        <record id="society_event_core.event_survey_feedback_template" model="mail.template">
               <field name="email_from">${(object.event_id.sender_email or '') | safe}</field>
        </record>
        <record id="event.event_registration_mail_template_badge" model="mail.template">
               <field name="email_from">${(object.event_id.sender_email or '') | safe}</field>
        </record>
    </data>
</odoo>