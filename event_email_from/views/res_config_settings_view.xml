<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.email.event</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="event.res_config_settings_view_form"/>
        <field name="arch" type="xml"> 
            <div name="registration_setting_container" position="after">
                <h2>Event settings</h2>
                <div class="row mt16 o_settings_container" name="registration_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="">
                                <field name="event_sender_address"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Email" for="event_sender_address"/>
                                <div class="text-muted">
                                    This email address will act as the sender for all event messages
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>