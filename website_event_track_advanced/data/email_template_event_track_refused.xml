<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="email_template_event_track_refused" model="mail.template">
        <field name="name">Event track mail - refused</field>
        <field name="model_id" ref="website_event_track.model_event_track"/>
        <field name="auto_delete" eval="True"/>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="email_from">${(object.event_id.organizer_id.email or object.event_id.user_id.email or '')|safe}</field>
        <field name="partner_to" >${object.partner_id.id}</field>
        <field name="subject">${object.event_id.name} - your presentation was not selected to the programme</field>
        <field name="body_html"><![CDATA[
<p>Dear ${object.partner_id.name},</p>
<p>Thank you for your proposal <strong>${object.name}</strong>.</p>

<p>Unfortunately your presentation <strong>"${object.name}"</strong> was not selected to the programme.</p>

<p>If you have any questions, please let us know.</p>]]></field>
    </record>

</odoo>

