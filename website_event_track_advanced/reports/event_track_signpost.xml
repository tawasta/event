<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
            id="report_event_track_signpost_report"
            string="Track signpost"
            model="event.track"
            report_type="qweb-pdf"
            file="website_event_track_advanced.event_track_signpost_report"
            name="website_event_track_advanced.event_track_signpost_report"
            paperformat="event.paperformat_euro_lowmargin"
    />

    <template id="website_event_track_advanced.event_track_signpost_report">

        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="track">


                <div class="page">
                    <style type="text/css">
                        .signpost-content{
                            width: 80%;
                            margin: auto;
                            text-align: center;
                        }

                        .signpost-content img{
                            max-width: 80%;
                            margin: auto;
                        }

                        h1, h2, h3, h4, h5Â {
                            font-weight: bold;
                            margin-top: 3em;
                        }

                        h1 {
                            font-size: 36px;
                        }

                        h2, h3, h4{
                            font-size: 28px;
                        }

                        h3 {
                            font-weight: normal
                        }
                    </style>

                    <div class="oe_structure"/>
                    <div class="signpost-content">
                        <img t-if="track.event_id.image"
                             t-attf-src="data:image/*;base64,{{track.event_id.image}}" />

                        <h1 style="margin-top: 3em;">
                            <span t-field="track.type.name" /> <span t-field="track.date" t-field-options='{"format": "dd.MM.YYYY"}'/><br/>
                            <span>At</span> <span t-field="track.date" t-field-options='{"format": "HH:mm"}'/>
                        </h1>

                        <h2 style="margin-top: 3em;" t-field="track.name" />

                        <h3 style="margin-top: 3em;" t-field="track.organizer.name" />

                        <h4 style="margin-top: 3em;" t-field="track.location_id.name" />
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>