<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="portal_my_home_menu_tracks"
        name="Portal layout : track menu entries"
        inherit_id="portal.portal_breadcrumbs"
        priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
                t-if="page_name == 'track'"
                t-attf-class="breadcrumb-item #{'active ' if not track else ''}">
                <a t-if="track" t-attf-href="/my/tracks?{{ keep_query() }}">Tracks</a>
                <t t-else="">Tracks</t>
            </li>
        </xpath>
    </template>
    <template
        id="portal_my_home_tracks"
        name="Show Tracks"
        inherit_id="portal.portal_my_home"
        customize_show="True"
        priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Tracks</t>
                <t t-set="url" t-value="'/my/tracks'" />
                <t t-set="placeholder_count" t-value="'track_count'" />
            </t>
        </xpath>
    </template>
    <template id="portal_my_tracks" name="My Tracks">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Tracks</t>
            </t>
            <t t-if="not tracks and not review_tracks">
                <p>There are currently no tracks for your account.</p>
            </t>
            <t t-if="tracks or review_tracks" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Track</th>
                        <th>Event</th>
                        <th>Event date</th>
                        <th>Contact Person</th>
                        <th>Stage</th>
                        <th />
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="tracks" t-as="track">
                        <t t-set="event" t-value="track.event_id" />
                        <tr>
                            <td>
                                <span t-field="track.name" />
                            </td>
                            <td>
                                <a
                                    t-attf-href="/event/{{event.id}}/register"
                                    t-att-title="event.name">
                                    <t t-esc="event.name" t-if="event.name != '/'" />
                                </a>
                            </td>
                            <td>
                               <span t-field="event.date_begin" /> - <span
                                    t-field="event.date_end"
                                />
                            </td>
                            <td>
                                <span t-field="track.partner_id.name" />
                            </td>
                            <td>
                                <t t-set="track_state">badge-default</t>
                                <t t-if="track.stage_id.is_editable">
                                    <t t-set="track_state">badge-info</t>
                                </t>
                                <t t-if="track.stage_id.is_submitted">
                                    <t t-set="track_state">badge-warning</t>
                                </t>
                                <t t-if="track.stage_id.is_accepted">
                                    <t t-set="track_state">badge-primary</t>
                                </t>
                                <t t-if="track.stage_id.is_done">
                                    <t t-set="track_state">badge-success</t>
                                </t>
                                <t t-if="track.stage_id.is_cancel">
                                    <t t-set="track_state">badge-danger</t>
                                </t>
                                <span
                                    t-field="track.stage_id"
                                    t-attf-class="badge badge-pill {{track_state}}"
                                />
                            </td>
                            <td>
                                <form
                                    id="track_proposal"
                                    t-attf-action="/event/#{slug(event)}/track_proposal/form"
                                    method="post"
                                    itemscope="itemscope"
                                    itemprop="offers"
                                    itemtype="http://schema.org/AggregateOffer">
                                    <input
                                        type="hidden"
                                        name="csrf_token"
                                        t-att-value="request.csrf_token()"
                                    />
                                    <input
                                        type="hidden"
                                        name="track_id"
                                        t-att-value="track.id"
                                    />
                                    <button
                                        type="submit"
                                        class="btn btn-link a-submit float-right p-0 no-decoration o_wait_lazy_js"
                                        role="button"
                                        title="Edit this proposal"
                                        aria-label="Edit this proposal"
                                        t-attf-id="#{track.id}">View/Edit</button>
                                </form>
                            </td>
                         </tr>
                    </t>
                    <t t-foreach="review_tracks" t-as="track">
                        <t t-set="event" t-value="track.event_id" />
                        <tr>
                            <td>
                                <span t-field="track.name" />
                            </td>
                            <td>
                                <a
                                    t-attf-href="/event/{{event.id}}/register"
                                    t-att-title="event.name">
                                    <t t-esc="event.name" t-if="event.name != '/'" />
                                </a>
                            </td>
                            <td>
                               <span t-field="event.date_begin" /> - <span
                                    t-field="event.date_end"
                                />
                            </td>
                            <td>
                            </td>
                            <td>
                                <t t-set="track_state">badge-default</t>
                                <t t-if="track.stage_id.is_editable">
                                    <t t-set="track_state">badge-info</t>
                                </t>
                                <t t-if="track.stage_id.is_submitted">
                                    <t t-set="track_state">badge-warning</t>
                                </t>
                                <t t-if="track.stage_id.is_accepted">
                                    <t t-set="track_state">badge-primary</t>
                                </t>
                                <t t-if="track.stage_id.is_done">
                                    <t t-set="track_state">badge-success</t>
                                </t>
                                <t t-if="track.stage_id.is_cancel">
                                    <t t-set="track_state">badge-danger</t>
                                </t>
                                <span
                                    t-field="track.stage_id"
                                    t-attf-class="badge badge-pill {{track_state}}"
                                />
                            </td>
                            <td>
                                <form
                                    id="track_proposal"
                                    t-attf-action="/event/#{slug(event)}/track_proposal/form"
                                    method="post"
                                    itemscope="itemscope"
                                    itemprop="offers"
                                    itemtype="http://schema.org/AggregateOffer">
                                    <input
                                        type="hidden"
                                        name="csrf_token"
                                        t-att-value="request.csrf_token()"
                                    />
                                    <input
                                        type="hidden"
                                        name="track_id"
                                        t-att-value="track.id"
                                    />
                                    <button
                                        type="submit"
                                        class="btn btn-link a-submit float-right p-0 no-decoration o_wait_lazy_js"
                                        role="button"
                                        title="Edit this proposal"
                                        aria-label="Edit this proposal"
                                        t-attf-id="#{track.id}">Review</button>
                                </form>
                            </td>
                         </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="event_track_portal_proposal" name="Event Track Portal Proposal">
        <div class="row">
            <t t-foreach="tracks" t-as="track">
                <t t-set="event" t-value="track.event_id" />
                <t
                    t-call="website_event_track_advanced.event_track_proposal_template"
                />
            </t>
        </div>
    </template>
</odoo>
