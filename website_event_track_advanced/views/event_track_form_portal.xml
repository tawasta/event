<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_event_track_form_portal" model="ir.ui.view">
			<field name="name">view_event_track_form_advanced_portal</field>
			<field name="model">event.track</field>
			<field name="inherit_id" ref="website_event_track_advanced.view_event_track_form" />
			<field name="groups_id" eval="[(4, ref('base.group_portal'))]" />
			<field name="arch" type="xml">

                <field name="language" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>

                <field name="language" position="after">
                    <field name="tag_ids" readonly="1" widget="many2many_tags"/>
                </field>

                <field name="target_group" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>

                <field name="target_group_info" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>

                <field name="type" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>

                <xpath expr="//div[@class='oe_chatter']" position="replace" />

			</field>
		</record>

	</data>
</odoo>