<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_event_track_form_advanced" model="ir.ui.view">
        <field name="name">view.event.track.form.advanced</field>
        <field name="model">event.track</field>
        <field name="inherit_id" ref="website_event_track.view_event_track_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="partner_id"/>
            </xpath>
            <xpath expr="//page[@name='speakers']" position="replace">
                <page string="Speakers" name="speakers">
                    <group>
                        <field name="speaker_ids" nolabel="1" options="{'no_quick_create':True,'no_create_edit':True}">
                            <tree name="speakers" string="Speakers">
                                <field name="name"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="city" optional="hide"/>
                                <field name="country_id" optional="hide"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
            <xpath expr="//sheet/group[last()]" position="after">
                <group name="dates">
                    <group>
                        <field name="date"/>
                        <label for="duration"/>
                        <div><field name="duration" class="oe_inline" widget="float_time"/>
                            hours
                        </div>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <label for="show_in_agenda" colspan="2" attrs="{'invisible':[('show_in_agenda', '=', True)]}" string="Will not be shown in agenda!"/>
                        <field name="show_in_agenda" invisible="1"/>
                        <field name="location_id"/>
                        <field name="type" domain="[('code', '!=', 'break')]" options="{'no_quick_create':True,'no_create_edit':True}"/>
                    </group>
                </group>
                <group name="reviewer" groups="event.group_event_manager">
                    <group>
                        <field name="review_group" groups="event.group_event_user" options="{'no_quick_create':True,'no_create_edit':True}"/>
                    </group>
                    <field name="is_reviewer" invisible="1"/>
                    <group attrs="{'invisible': [('is_reviewer', '=', False)]}">
                        <label for="grade_id"/>
                        <div>
                            <field name="grade_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                            <div>
                                <field name="rating_comment"/>
                            </div>
                        </div>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='description']" position="after">
                <page name="description_original" string="Original Description">
                    <group>
                        <field name="description_original" nolabel="1"/>
                    </group>
                </page>
                <page name="target_group" string="Target Group" groups="event.group_event_manager">
                    <group name="portal">
                        <group>
                            <field name="language" options="{'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="target_group" options="{'no_quick_create':True,'no_create_edit':True}"/>
                        </group>
                        <group colspan="2">
                            <field name="target_group_info"/>
                            <field name="extra_info"/>
                        </group>
                    </group>
                </page>
                <page string="Ratings" name="ratings" groups="event.group_event_manager">
                    <field name="ratings" readonly="1"/>
                </page>
            </xpath>
            <xpath expr="//page[@name='description']//field[@name='description']" position="before">
                <group>
                    <field name="application_file_filename" invisible="1"/>
                    <field name="application_file" widget="binary" filename="application_file_filename"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
