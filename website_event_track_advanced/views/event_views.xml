<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.actions.act_window" id="act_event_track_assign">
        <field name="name">Assign Reviewers</field>
        <field name="res_model">event.track.assign.wizard</field>
        <field name="binding_model_id" ref="event.model_event_event"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="view_event_form" model="ir.ui.view">
        <field name="name">view_event_form_call_for_papers</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <header position="after">
                <button name="action_generate_breaks" type="object" string="Generate Breaks"/>
            </header>
            <field name="tag_ids" position="after">
                <field name="track_types_ids" widget="many2many_tags"/>
                <field name="target_group_ids" widget="many2many_tags"/>
                <field name="show_track_twitter_hashtags"/>
                <field name="allowed_track_tag_ids" widget="many2many_tags"/>
            </field>
            <field name="address_id" position="after">
                <field name="location_ids" widget="many2many_tags"/>
            </field>
            <notebook position="inside">
                <page string="Tracks">
                    <field name="track_ids" context="{'tree_view_ref': 'website_event_track_advanced.view_event_track_advanced_tree'}"/>
                </page>
                <page string="Conflicts">
                    <group name="overlapping_tracks" col="1">
                        <field name="overlapping_location_track_ids" attrs="{'invisible':[('overlapping_location_track_ids', '=', [])]}">
                            <tree>
                                <field name="name"/>
                                <field name="location_id"/>
                                <field name="date"/>
                                <field name="date_end"/>
                                <field name="duration" widget="float_time"/>
                            </tree>
                        </field>
                        <field name="overlapping_chairperson_track_ids" attrs="{'invisible':[('overlapping_chairperson_track_ids', '=', [])]}">
                            <tree>
                                <field name="name"/>
                                <field name="chairperson_id"/>
                                <field name="date"/>
                                <field name="date_end"/>
                                <field name="duration" widget="float_time"/>
                            </tree>
                        </field>
                        <field name="overlapping_speaker_track_ids" attrs="{'invisible':[('overlapping_speaker_track_ids', '=', [])]}">
                            <tree>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="date_end"/>
                                <field name="duration" widget="float_time"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
