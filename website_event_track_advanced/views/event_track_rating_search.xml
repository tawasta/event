<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_event_track_rating_search" model="ir.ui.view">
            <field name="name">event_track_rating_search</field>
            <field name="model">event.track.rating</field>
            <field name="arch" type="xml">
                <search string="Search track ratings">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]" />
                    <group expand="0" string="Group By">
                        <filter string="Presentation" name='groupby_track' context="{'group_by': 'event_track'}"/>
                    </group>
                    <field name="event_id"/>
                    <field name="event_track"/>
                    <field name="rating"/>
                    <field name="comment"/>
                </search>
            </field>
        </record>
    </data>
</odoo>