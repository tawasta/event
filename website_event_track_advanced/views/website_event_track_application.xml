<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Application form template -->
    <template name="Event track application" id="website_event_track_advanced.event_track_application">
        <t t-call="website_event_track_advanced.event_track_application_type" />
        <t t-call="website_event_track_advanced.event_track_application_info" />
        <t t-call="website_event_track_advanced.event_track_application_targetgroup_info" />
        <t t-call="website_event_track_advanced.event_track_application_contact_info" />
        <t t-call="website_event_track_advanced.event_track_application_speakers" />
        <t t-call="website_event_track_advanced.event_track_application_webinar" />
        <t t-call="website_event_track_advanced.event_track_application_workshop" />
        <t t-call="website_event_track_advanced.event_track_application_extra_info" />

        <script src="https://cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/proposal.js?v102"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/track_content.js?v101"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/target_group_info.js?v100"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/extra_info.js?v101"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/webinar_info.js?v100"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/workshop.js?v100"></script>
    </template>

    <!-- Application type -->
    <template id="website_event_track_advanced.event_track_application_type">
        <div class="panel panel-primary" id="track-application-type-div">
            <div class="panel-heading">
                <h3 class="panel-title">Application type</h3>
            </div>
            <div class="panel-body">
                <div class="form-group" id="track-application-application-type-div">
                    <div class="col-md-4">
                        <label for="application_type" class="control-label">Application type</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-ellipsis-h"/>
                            </span>
                            <select name="application_type" id="application_type" required="true"
                                    class="form-control" type="selection">
                                <option value=""></option>
                                <t t-foreach="types" t-as="application_type">
                                    <option t-attf-value="#{application_type['code']}"
                                            t-attf-description="#{application_type['description']}"
                                            t-att-selected="'selected' if track['type']['id'] == application_type['id'] else False" >
                                        <t t-esc="application_type['name']"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <label for="type_description" class="control-label">Description</label>

                        <span id="application_type_description" name="type_description"/>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <!-- Application type -->

    <!-- Application info -->
    <template id="website_event_track_advanced.event_track_application_info">
        <div class="panel panel-primary" id="track-application-application-div">
            <div class="panel-heading">
                <h3 class="panel-title">Application info</h3>
            </div>

            <div class="panel-body">
                <p id="track-application-application-alert-info" class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                    This part of the application is disclosed to the reviewers.
                </p>
                <p id="track-application-application-alert-warning" class="alert alert-warning alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                    Avoid using identifiable information (name, organisation, project).
                </p>

                <div class="form-group" id="track-application-application-info-div">

                    <div class="col-md-12">
                        <label for="track_name" class="control-label">Presentation title</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-header"/>
                            </span>
                            <input id="track-application-name-field" name="track_name" placeholder="Application title" t-att-value="track['name']"
                                   class="form-control" required="true" type="text"/>
                        </div>
                    </div>

                    <div class="col-md-12" id="track-application-video-url-div">
                        <label for="video_url" class="control-label">Presentation in video format (link to e.g. YouTube or Vimeo)</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-video-camera"/>
                            </span>

                            <a t-if="user and user.has_group('event.group_track_reviewer')"
                               t-att-href="track['video_url']"
                               class="form-control" target="_blank">
                                <span t-field="track.video_url" />
                            </a>
                            <input t-if="not user or user and not user.has_group('event.group_track_reviewer')"
                                   name="video_url" t-att-value="track['video_url']"
                                   placeholder="https://www.youtube.com, https://vimeo.com, ..."
                                   class="form-control" type="text"/>
                        </div>
                    </div>

                    <div id="track-application-application-info-content" class="col-md-12">
                        <label for="track_content" class="control-label">Content of the presentation</label>
                        <span t-if="user and not user.has_group('event.group_track_reviewer')"
                              id="track_content_word_counter" class="pull-right">Words
                            <span id="track_content_word_count" />
                        </span>

                        <span t-if="user and user.has_group('event.group_track_reviewer')" t-field="track.description" />

                        <textarea t-if="user and not user.has_group('event.group_track_reviewer')"
                                  name="track_content"
                                  id="track_content"
                                  class="form-control"
                                  required="required"
                                  placeholder="Application content..."
                                  rows="16"><t t-esc="track['description']" /></textarea>
                    </div>

                    <div id="track-application-track_content-error-div" class="col-md-12 hidden mt16">
                        <p class="alert alert-danger alert-dismissable" >
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                            Please fill out the application content.
                        </p>
                    </div>

                    <div class="col-md-4">
                        <label for="language" class="control-label">Language of the presentation</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-language"/>
                            </span>
                            <select name="language" required="true" class="form-control"
                                    type="selection">
                                <t t-foreach="track_languages" t-as="language">
                                    <option t-attf-value="#{language.id}" t-att-selected="'selected' if track['language']['id'] == language['id'] or (track['language']['id'] == False and language['id'] == 19) else False">
                                        <t t-esc="language.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label for="duration" class="control-label">Duration</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"/>
                            </span>

                            <select name="duration" required="true" class="form-control"
                                    type="selection">
                                <t t-foreach="durations" t-as="duration_item">
                                    <option t-attf-value="#{duration_item}" t-att-selected="'selected' if track['duration'] == duration else False">
                                        <t t-esc="duration_item"/> h
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group" id="track-application-application-attachment-div">
                    <div id="track-application-application-attachment-attachment-div" class="col-md-12">
                        <label for="attachment_ids">Add attachments (optional)</label><br/>
                        <input type="file" name="attachment_ids" id="attachment-file" multiple="true" />

                        <!--
                        <label class="btn btn-default btn-file col-xs-10 col-sm-offset-1">
                            Add attachments (optional) <i class="fa fa-paperclip"/><input type="file" name="attachment_ids" id="attachment-file" multiple="true" style="display: none;"/>
                            <span class="text-success" id="attachment-label"></span>
                        </label>
                        -->
                        <button type="button" id="btn-remove-attachment" class="btn btn-default" title="Remove attachments">
                            <i class="fa fa-trash"/>
                        </button>

                    </div>
                </div>

                <div id="track-application-attachment-info-div" class="hidden">
                    <p class="alert alert-info alert-dismissable" >
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                        The presentation text can be supplemented with an attachment file.
                    </p>
                </div>

                <div id="track-application-attachment-error-div" class="hidden">
                    <p class="alert alert-danger alert-dismissable" >
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                        Your attachment was too large. Maximum allowed size is 30MB.
                    </p>
                </div>

                <div class="form-group" id="track-application-attachment-reviewer-div"
                     t-if="user and user.has_group('event.group_track_reviewer')">

                    <div class="col-xs-12">
                        <label for="attachment_ids" class="control-label">Attachments</label>
                    </div>

                    <t t-foreach="track.attachment_ids" t-as="attachment">
                    <!-- File attachment and download -->
                    <div class="col-xs-4">
                        <a t-att-href="'/web/content/%s?download=1' % (attachment.id)">
                            <div class="o_image" t-att-data-mimetype="'%s' % (attachment.mimetype)" style="display:block;"></div>
                            <t t-esc="attachment.name"/>
                        </a>
                    </div>
                    </t>
                </div>

            </div>
        </div>
    </template>
    <!-- / Application info -->

    <!-- Target group info -->
    <template id="website_event_track_advanced.event_track_application_targetgroup_info">
        <div class="panel panel-primary" id="track-application-targetgroup-div">
            <div class="panel-heading">
                <h3 class="panel-title">Target group details</h3>
            </div>

            <div class="panel-body">
                <p id="track-application-targetgroup-alert-info" class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>

                    <span>Select your presentation’s primary target group.</span><br/>
                    <span>You can enter specifications of your presentation’s target group in the target group details.</span>
                </p>

                <div class="form-group" id="track-application-targetgroup-info-div">
                    <div class="col-md-4">
                        <label for="target_group" class="control-label">Target group</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-bullseye"/>
                            </span>
                            <select id="target_group_select" name="target_group" required="true" class="form-control"
                                    type="selection">
                                <option value=""></option>

                                <t t-foreach="target_groups" t-as="group">
                                    <option t-attf-value="#{group.id}" t-att-selected="'selected' if track['target_group']['id'] == group['id'] else False">
                                        <t t-esc="group.name" />
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <label for="target_group_info" class="control-label">Target group details</label>

                        <span id="target_group_info_word_counter" class="pull-right">Words
                            <span id="target_group_info_word_count" />
                        </span>

                        <textarea name="target_group_info"
                                  id="target_group_info"
                                  class="form-control"
                                  placeholder="Target group info..."
                                  rows="4">
                            <t t-esc="track['target_group_info']" />
                        </textarea>
                    </div>
                </div>

                <div class="form-group" t-if="len(event.allowed_track_tag_ids)"
                     id="track-application-targetgroup-tags-div">
                    <div class="col-md-12">
                        <label class="control-label required-label">Keywords</label>
                        <p id="track-application-targetgroup-tags-alert-info" class="alert alert-info alert-dismissable mt8">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                            Choose approx. 3 words from the list that best describe your presentation.
                        </p>
                        <p id="track-application-targetgroup-tags-alert-warning" class="alert alert-warning alert-dismissable">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                            Selecting too many keywords can make it harder to find the correct audience.
                        </p>

                        <div class="row">
                            <label class="col-sm-4 col-xs-12" t-foreach="event.allowed_track_tag_ids"
                                   t-as="tag">
                                <input type="checkbox" t-attf-name="tag_#{str(tag.id)}" t-att-checked="'checked' if tag.id in track.tag_ids.ids else False"/>
                                <t t-esc="tag.name"/>
                            </label>

                            <label class="col-sm-4 col-xs-12">
                                <input name="keywords" placeholder="Other, what?" class="form-control" type="text" t-att-value="track.keywords"/>
                            </label>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </template>
    <!-- / Target group info -->

    <!-- Contact info -->
    <template id="website_event_track_advanced.event_track_application_contact_info">

        <div class="panel panel-primary" id="track-application-contact-div">
            <div class="panel-heading">
                <h3 class="panel-title">Presentation’s contact person</h3>
            </div>

            <div class="panel-body">
                <p id="track-application-contact-alert-info" class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                    Please fill the contact persons information here.
                </p>

                <div id="track-application-contact-header-div"
                     class="track-application-contact-input-row">
                    <label for="contact_email">Email</label>
                    <label for="contact_first_name">First name</label>
                    <label for="contact_last_name">Last name</label>
                    <label for="contact_organization">Organization</label>
                    <label for="contact_title">Title</label>
                    <label for="contact_phone">Phone</label>
                </div>

                <div id="track-application-contract-input-div">
                    <div class="track-application-contact-input-row">
                        <input name="contact_email" placeholder="Email" class="form-control"
                               required="true" type="email" t-att-value="track.partner_id.email"/>
                        <input name="contact_first_name" placeholder="First name"
                               class="form-control" required="true" type="text" t-att-value="track.partner_id.firstname"/>
                        <input name="contact_last_name" placeholder="Last name" class="form-control"
                               required="true" type="text" t-att-value="track.partner_id.lastname"/>
                        <input name="contact_organization" placeholder="Organization"
                               class="form-control" required="true" type="text" t-att-value="track.partner_id.parent_id.name"/>
                        <input name="contact_title" placeholder="Title" class="form-control"
                               type="text" required="true" t-att-value="track.partner_id.function"/>
                        <input name="contact_phone" placeholder="Phone" class="form-control"
                               type="text" t-att-value="track.partner_id.phone"/>

                        <button type="button" class="btn btn-remove-speaker" disabled="1">
                            <i class="fa fa-trash"/>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </template>
    <!-- / Contact info -->

    <!-- Speakers -->
    <template id="website_event_track_advanced.event_track_application_speakers">

        <div class="panel panel-primary" id="track-application-speakers-div">
            <div class="panel-heading">
                <h3 class="panel-title">Presenters</h3>
            </div>

            <div class="panel-body">
                <p id="track-application-speakers-alert-info" class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                    <span class="alert-message">List the details of all presenters</span>
                </p>

                <div id="track-application-speakers-header-div"
                     class="track-application-speaker-input-row">
                    <label for="speaker_email[0]">Email</label>
                    <label for="speaker_first_name[0]">First name</label>
                    <label for="speaker_last_name[0]">Last name</label>
                    <label for="speaker_organization[0]">Organization</label>
                    <label for="speaker_title[0]">Title</label>
                    <!-- <label for="speaker_returning[0]" class="track-application-speaker-returning">Returning presenter</label>-->
                    <label for="speaker_phone[0]">Phone</label>
                </div>

                <div id="track-application-speakers-input-div">
                    <input id="track-application-speaker-input-index" name="speakers_input_index"
                           value="0" class="hidden"/>

                    <!-- Existing speakers -->
                    <t t-foreach="track.speaker_ids" t-as="speaker">
                        <div class="track-application-speaker-input-row">
                            <input class="form-control" t-att-value="speaker.email"
                                   required="true" type="email" />
                            <input t-att-value="speaker.firstname"
                                   class="form-control" required="true" type="text"/>
                            <input placeholder="Last name" t-att-value="speaker.lastname"
                                   class="form-control" required="true" type="text"/>
                            <input placeholder="Organization" t-att-value="speaker.parent_id.name"
                                   required="true" class="form-control" type="text"/>
                            <input placeholder="Title" class="form-control" t-att-value="speaker.function"
                                   required="true" type="text"/>
                            <input placeholder="Phone" class="form-control" t-att-value="speaker.phone" type="text"/>
                            <!--
                            <input class="track-application-speaker-returning form-control"
                                   type="checkbox" t-att-checked="'checked' if speaker.returning_speaker else False"
                                   title="Returning speaker"/>
                            -->

                            <button type="button" class="btn btn-remove-speaker" disabled="1">
                                <i class="fa fa-trash"/>
                            </button>
                        </div>
                    </t>

                    <div id="track-application-speakers-input-row"
                         class="track-application-speaker-input-row">
                        <input name="speaker_email[0]" placeholder="Email" class="form-control"
                               required="true" type="email"/>
                        <input name="speaker_first_name[0]" placeholder="First name"
                               class="form-control" required="true" type="text"/>
                        <input name="speaker_last_name[0]" placeholder="Last name"
                               class="form-control" required="true" type="text"/>
                        <input name="speaker_organization[0]" placeholder="Organization"
                               required="true" class="form-control" type="text"/>
                        <input name="speaker_title[0]" placeholder="Title" class="form-control"
                               required="true" type="text"/>
                        <input name="speaker_phone[0]" placeholder="Phone" class="form-control"
                               type="text"/>
                        <!--
                        <input name="speaker_returning[0]" class="form-control track-application-speaker-returning"
                               type="checkbox" title="Returning speaker"/>
                               -->

                        <button type="button" class="btn btn-remove-speaker" disabled="1">
                            <i class="fa fa-trash"/>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <button type="button" class="btn btn-default col-xs-10 col-xs-offset-1 mt8"
                            id="add_speaker">Add presenter <i class="fa fa-user"/>
                    </button>
                </div>
            </div>
        </div>
    </template>
    <!-- / Speakers -->

    <!-- Webinar info -->
    <template id="website_event_track_advanced.event_track_application_webinar">

        <div class="panel panel-warning" id="track-application-webinar-div">
            <div class="panel-heading">
                <h3 class="panel-title">Webinar details</h3>
            </div>

            <div class="panel-body">
                <p id="track-application-webinar-alert-info" class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                    <span>You can fill this if you want to hold a webinar before the actual event.</span>
                </p>

                <div class="form-group" id="track-application-webinar-div">
                    <div class="col-md-4">
                        <label for="webinar" class="control-label">I would like to hold a webinar</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-microphone"/>
                            </span>
                            <!-- This checkbox is presented as a selection for uniformitys sake -->
                            <select id="track-application-webinar-selection-field"
                                    name="webinar"
                                    class="form-control"
                                    type="selection">
                                <option value="0" t-att-selected="'selected' if track['webinar'] == False else False">No</option>
                                <option value="1" t-att-selected="'selected' if track['webinar'] == True else False">Yes</option>
                            </select>
                        </div>

                    </div>
                    <div class="col-md-8">
                        <label for="webinar_info" class="control-label">Webinar details</label>

                        <span id="webinar_info_word_counter" class="pull-right">Words
                            <span id="webinar_info_word_count" />
                        </span>

                        <textarea class="form-control"
                                  id="webinar_info"
                                  name="webinar_info"
                                  placeholder="Webinar info..."
                                  rows="4">
                            <t t-esc="track.webinar_info" />
                        </textarea>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <!-- / Webinar info -->

    <!-- Workshop info -->
    <template id="website_event_track_advanced.event_track_application_workshop">

        <div class="panel panel-warning" id="track-application-workshop-div">
            <div class="panel-heading">
                <h3 class="panel-title">Session</h3>
            </div>

            <div class="panel-body">
                <p id="track-application-workshop-alert-info" class="alert alert-info alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&#215;</a>
                    Session information and invoicing address.<br/>
                    The contract will be sent for the signee.
                </p>

                <h4>
                    Contract signee
                </h4>

                <div id="track-application-organization-signee-div">
                    <div id="track-application-signee-header-div"
                         class="track-application-signee-input-row">
                        <label for="signee_email">Email</label>
                        <label for="signee_first_name">First name</label>
                        <label for="signee_last_name">Last name</label>
                        <label for="signee_title">Title</label>
                    </div>

                    <div id="track-application-signee-input-div">
                        <div class="track-application-signee-input-row">
                            <input name="signee_email" placeholder="Email" class="form-control"
                                   required="true" type="email" t-att-value="track.organizer_contact.email"/>
                            <input name="signee_first_name" placeholder="First name"
                                   class="form-control" required="true" type="text" t-att-value="track.organizer_contact.firstname"/>
                            <input name="signee_last_name" placeholder="Last name" class="form-control"
                                   required="true" type="text" t-att-value="track.organizer_contact.lastname"/>
                            <input name="signee_title" placeholder="Title" class="form-control"
                                   type="text" t-att-value="track.organizer_contact.function"/>
                        </div>
                    </div>
                </div>

                <div class="mt16" id="track-application-organization-invoice-div">
                    <h4 class="invoice-address-title">Organization invoice address</h4>

                    <div id="track-application-organizer-header-div"
                         class="track-application-organizer-input-row">
                        <label for="organizer_organization">Organization</label>
                        <label for="organizer_street">Street</label>
                        <label for="organizer_zip">Zip</label>
                        <label for="organizer_city">City</label>
                        <label for="organizer_reference">Your reference</label>
                    </div>

                    <div id="track-application-organizer-input-div"
                         class="track-application-organizer-input-row">
                        <input name="organizer_organization" placeholder="Organization"
                               class="form-control" type="text" required="true" t-att-value="track.organizer.name"/>
                        <input name="organizer_street" placeholder="Street" class="form-control"
                               type="text" required="true" t-att-value="track.organizer.street"/>
                        <input name="organizer_zip" placeholder="Zip" class="form-control"
                               type="text" required="true" t-att-value="track.organizer.zip"/>
                        <input name="organizer_city" placeholder="City" class="form-control"
                               type="text" required="true" t-att-value="track.organizer.city"/>
                        <input name="organizer_reference" placeholder="Your reference"
                               class="form-control" type="text" t-att-value="track.organizer.ref"/>
                    </div>
                </div>

                <div class="form-group mt16" id="track-application-workshop-div">
                    <div class="col-md-4" id="workshop-participants-div">
                        <label for="workshop_participants" class="control-label">Max participants
                        </label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-users"/>
                            </span>
                            <input id="workshop_participants" name="workshop_participants" placeholder="E.g. 20"
                                   class="form-control" required="true" t-att-value="track.workshop_participants"/>
                        </div>
                    </div>

                    <div class="col-md-4" id="workshop-fee-div">
                        <label for="workshop_fee" class="control-label">Participation fee</label>

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-users"/>
                            </span>
                            <input id="workshop_fee" name="workshop_fee" placeholder="Leave empty if free"
                                   class="form-control" t-att-value="track.workshop_fee"/>
                        </div>
                    </div>

                    <div class="col-md-12" id="workshop-goals-div">
                        <label for="workshop_goals" class="control-label">Session goals</label>

                        <span id="workshop_goals_word_counter" class="pull-right">Words
                            <span id="workshop_goals_word_count" />
                        </span>

                        <textarea class="form-control"
                                  id="workshop_goals"
                                  name="workshop_goals"
                                  placeholder="Session goals"
                                  rows="4"><t t-esc="track.workshop_goals" /></textarea>
                    </div>

                    <div class="col-md-12">
                        <label for="workshop_schedule" class="control-label">Session program and schedule
                        </label>

                        <textarea class="form-control"
                                  id="workshop_schedule"
                                  name="workshop_schedule"
                                  placeholder="Session schedule"
                                  rows="4"><t t-esc="track.workshop_schedule" /></textarea>
                    </div>
                </div>

            </div>
        </div>
    </template>
    <!-- / Workshop info -->

