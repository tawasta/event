<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_event_track_kanban" model="ir.ui.view">
            <field name="name">view_event_track_kanban_advanced</field>
            <field name="model">event.track</field>
            <field name="inherit_id" ref="website_event_track.view_event_track_kanban" />
            <field name="arch" type="xml">

                <xpath expr="//templates" position="before">
                    <field name="date"/>
                    <field name="partner_string"/>
                    <field name="speakers_string"/>
                    <field name="duration"/>
                    <field name="location_id"/>
                </xpath>

                <xpath expr="//div[@class='oe_kanban_content']" position="replace">
                    <div class="oe_kanban_content">
                        <field name="tag_ids"/>
                        <h4><field name="name"/></h4>
                        <div>
                            <p><strong>Contact:</strong> <field name="partner_string"/></p>
                            <p><strong>Presenters:</strong> <field name="speakers_string"/></p>
                        </div>
                        <div class="oe_kanban_bottom_right">
                            <field name="location_id"/><br/>
                            <field name="date" widget="date"/><br/>
                            <t t-if="record.duration.raw_value"><field name="duration" widget="float_time"/> hours</t>
                        </div>
                        <div class="oe_kanban_footer_left">
                            Rating: <field name="rating_avg" />
                        </div>
                        <div class="oe_clear"/>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>