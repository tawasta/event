<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_event_track_search" model="ir.ui.view">
        <field name="name">view_event_track_kanban_advanced</field>
        <field name="model">event.track</field>
        <field name="inherit_id" ref="website_event_track.view_event_track_search"/>
        <field name="arch" type="xml">

            <field name="name" position="after">
                <field name="type" />
            </field>

            <group position="inside">
                <filter string="Type" context="{'group_by': 'type'}"/>
            </group>
        </field>
    </record>

</odoo>