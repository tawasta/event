<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tracks listing -->
    <template id="tracks" inherit_id="website_event_track.tracks">
        <xpath expr="//ul/li[contains(@class, 'fa-calendar')]"
               position="attributes">
            <attribute name="t-if">track.date and not track.event_id.event_over</attribute>
        </xpath>

        <xpath expr="//ul/li[contains(@class, 'fa-map-marker')]"
               position="attributes">
            <attribute name="t-if">track.location_id and not track.event_id.event_over</attribute>
        </xpath>
        <xpath expr="//div[@class='row mb32']" position="attributes">
            <attribute name="t-if">track.type.attendable == False</attribute>
        </xpath>

    </template>

</odoo>
