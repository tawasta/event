<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_event_track_advanced_tree" model="ir.ui.view">
        <field name="name">event_track_advanced_tree</field>
        <field name="model">event.track</field>
        <field name="type">tree</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">

            <tree string="Event track">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="language"/>
                <field name="review_group"/>
                <field name="rating_avg"/>
                <field name="active" invisible="1"/>
            </tree>

        </field>
    </record>

    <record id="view_event_track_tree" model="ir.ui.view">
        <field name="name">view_event_track_tree_advanced</field>
        <field name="model">event.track</field>
        <field name="inherit_id"
               ref="website_event_track.view_event_track_tree"/>
        <field name="arch" type="xml">

            <field name="event_id" position="after">
                <field name="partner_id"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="review_group"/>
                <field name="ratings_count"/>
                <field name="rating_avg"/>
                <field name="state"/>
            </field>

        </field>
    </record>

</odoo>