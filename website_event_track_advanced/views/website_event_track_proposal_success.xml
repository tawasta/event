<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Success layout for save -->
    <template name="Event track proposal success" id="website_event_track_advanced.event_track_proposal_success">

        <t t-name="website_event_track_advanced.event_track_proposal_success">
            <t t-call="website_event.event_details">
                <p class="text-center">Thank you for your submission!</p>
                <p class="text-center">You will receive an email containing a registration link for viewing and editing your proposal. Speakers will also receive a registration link.</p>
            </t>
        </t>

    </template>

    <template name="Event track proposal success" id="website_event_track_advanced.event_track_proposal_success_draft">

        <t t-name="website_event_track_advanced.event_track_proposal_success_draft">
            <t t-call="website_event.event_details">
                <p class="text-center">Thank you for your submission!</p>
                <p class="text-center">Your submission has been saved as a draft.</p>
                <p class="text-center">A registration link will be sent for contact and speakers.</p>
                <p class="text-center">After logging in, they can edit the submission.</p>
                <p class="text-center">Only the contact person can confirm the submission.</p>
            </t>
        </t>

    </template>

    <!-- Success layout for save and send -->
    <template name="Event track proposal success" id="website_event_track_advanced.event_track_proposal_success_confirmed">

        <t t-name="website_event_track_advanced.event_track_proposal_success_confirmed">
            <t t-call="website_event.event_details">
                <p class="text-center">Thank you for your submission!</p>
                <p class="text-center">Your submission has been saved and sent to review.</p>
                <p class="text-center">A registration link will be sent for contact and speakers.</p>
                <p class="text-center">After logging in, they can view the submission.</p>
            </t>
        </t>

    </template>

</odoo>
