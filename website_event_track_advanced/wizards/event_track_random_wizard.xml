<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="event_track_random_wizard_form" model="ir.ui.view">
        <field name="name">event.track.random.form</field>
        <field name="model">event.track.random.wizard</field>
        <field name="arch" type="xml">
            <form string="Randomize">
                <h2>Randomize</h2>

                <p>This will only randomize attributes that are not already set.</p>

                <group>
                    <field name="location" />
                </group>

                <footer>
                    <button string="Randomize"
                            name="action_track_randomize"
                            type="object"
                            default_focus="1"
                            class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_event_track_random" model="ir.actions.act_window">
        <field name="name">Randomize</field>
        <field name="res_model">event.track.random.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="event_track_random_wizard_form"/>
        <field name="target">new</field>
    </record>

    <act_window id="act_event_track_random"
                name="Randomize"
                multi="True"
                res_model="event.track.random.wizard"
                src_model="event.track"
                key2="client_action_multi"
                view_mode="form"
                view_type="form"
                target="new"
    />

</odoo>