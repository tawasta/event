<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="event_track_proposal_hide_introduction"
        inherit_id="website_event_track.event_track_proposal"
        active="True"
        customize_show="True"
        name="Hide Proposal Introduction"
    >
        <xpath expr="//h3[@class='o_page_header mt16']//..//.." position="attributes">
            <attribute name="class">o_page_header mt16 d-none</attribute>
        </xpath>
    </template>
    <template
        id="event_track_proposal_hide_sidebar"
        inherit_id="website_event_track.event_track_proposal"
        active="True"
        customize_show="True"
        name="Hide Proposal Sidebar"
    >
        <xpath
            expr="//section[@class='row']//div[@class='col-lg-3']"
            position="attributes"
        >
            <attribute name="class">col-lg-3 d-none</attribute>
        </xpath>
        <xpath
            expr="//section[@class='row']//div[@class='col-lg-9']"
            position="attributes"
        >
            <attribute name="class">col-lg-12</attribute>
        </xpath>
    </template>
</odoo>
