<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="registration_template"
        inherit_id="website_event.registration_template"
    >
        <xpath expr="//form" position="before">
                <div class="d-flex justify-content-end mb-2" t-if="event.event_registrations_open and request.website.is_public_user()">
                <a
                    class="btn btn-primary"
                    t-attf-href="/web/login?redirect={{request.httprequest.path}}"
                >
                    <span>Log In / Register</span>
                    <span class="fa fa-sign-in ml-1" />
                </a>
            </div>
            </xpath>

    </template>

</odoo>
