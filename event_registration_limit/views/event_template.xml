<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="custom_registration_template"
        inherit_id="website_event.registration_template"
    >
        <xpath expr="//div[@id='o_wevent_tickets']" position="after">
            <t t-if="registration_disabled">
                <div class="alert alert-secondary">
                    <i class="fa fa-warning" />
                    <t t-esc="error_message" />
                </div>
            </t>
        </xpath>
        <xpath expr="//div[@id='o_wevent_tickets']" position="attributes">
            <attribute name="t-if">not registration_disabled</attribute>
        </xpath>
        <xpath expr="//div[@class='col col-md-8 d-flex']/em" position="replace" />
    </template>
</odoo>
