<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="event_track_application_workshop"
              name="Website track time"
              inherit_id="website_event_track.event_track_application_workshop">

        <xpath expr="//div[@id='workshop-fee-div']" position="after">
            <div class="col-md-4" id="workshop-track-request-time-div">
                <label for="request_time" class="control-label">Requested time
                </label>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-clock-o"/>
                    </span>

                    <select name="request_time" id="request_time" class="form-control" type="selection">
                        <option value="false">-</option>

                        <t t-foreach="request_times" t-as="track_request_time">
                            <option t-attf-value="#{track_request_time['id']}"
                                    t-att-selected="'selected' if track['request_time']['id'] == track_request_time['id'] else False" >
                                <t t-esc="track_request_time['name']"/>
                            </option>
                        </t>
                    </select>
                </div>
            </div>
        </xpath>
    </template>
</odoo>