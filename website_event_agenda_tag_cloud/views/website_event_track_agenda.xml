<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Agenda tag cloud listing -->
    <template id="website_event_agenda_tag_cloud.agenda_filters"
              inherit_id="website_event_track_advanced.agenda"
              active="False"
              customize_show="True"
              name="Presentation tag cloud filter">

        <xpath expr="//div[@id='filter-tracks']" position="inside">
            <span id="event-id" t-field="event.id" class="hidden"/>
            <div id="tag-cloud"/>

            <link rel="stylesheet" href="/website_event_agenda_tag_cloud/static/src/css/jqcloud.css" type="text/css"/>

            <script src="/website_event_agenda_tag_cloud/static/src/js/jqcould.min.js?v100"></script>
            <script src="/website_event_agenda_tag_cloud/static/src/js/tag_cloud.js?v100"></script>
        </xpath>

    </template>

</odoo>
