<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="cart_lines_event_sale" inherit_id="website_sale.cart_lines">
        <xpath expr="//input[@type='text']" position="attributes">
            <attribute name="t-att-disabled">line.event_id</attribute>
        </xpath>
        <xpath expr="//div[@class='input-group-prepend']" position="attributes">
            <attribute
                name="t-att-class">'input-group-prepend d-none' if line.event_id else 'input-group-prepend'</attribute>
        </xpath>
        <xpath expr="//div[@class='input-group-append']" position="attributes">
            <attribute
                name="t-att-class">'input-group-append d-none' if line.event_id else 'input-group-append'</attribute>
        </xpath>
    </template>
</odoo>
