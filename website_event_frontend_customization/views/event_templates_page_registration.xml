    <template
        id="hide_share_box"
        inherit_id="website_event.event_description_full"
        active="False"
        customize_show="True"
        name="Hide share box"
    >
        <xpath
            expr="//div[@class='o_wevent_sidebar_block'][last()]"
            position="attributes"
        >
            <attribute name="class">o_wevent_sidebar_block d-none</attribute>
        </xpath>
    </template>
    <!-- Event confirmation -->
    <template
        id="hide_ticket_ref"
        inherit_id="website_event.registration_complete"
        active="True"
        customize_show="True"
        name="Hide ticket reference"
    >
        <xpath
            expr="//div[@class='d-flex flex-column']//span[last()]"
            position="replace"
        >
            <span>
                <i class="fa fa-ticket mr-2" />
                <t
                    t-if="attendee.event_ticket_id"
                    t-esc="attendee.event_ticket_id.name"
                />
                <t t-else="">N/A</t>
            </span>
        </xpath>
    </template>
    <template
        id="hide_calender_button"
        inherit_id="website_event.event_description_full"
        active="True"
        customize_show="True"
        name="Hide Calender button"
    >
        <xpath
            expr="//div[@class='o_wevent_sidebar_block border-bottom pb-3 my-3']/a[@class='btn btn-secondary text-bg-secondary dropdown w-100 mt-3']"
            position="attributes"
        >
            <attribute name="class">dropdown d-none</attribute>
        </xpath>
    </template>
</odoo>
