<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Event seats -->
    <template id="show_seats" inherit_id="website_event.event_description_full" active="False" customize_show="True" name="Show event seats">
        <xpath expr="//div[@class='col-lg-4 bg-light shadow-sm d-print-none']//div[@class='o_wevent_sidebar_block'][1]" position="before">
            <div id="show_seats" class="o_wevent_sidebar_block">
                <h6 class="o_wevent_sidebar_title">Current seats</h6>
                <p class="mb-2">Seats available: <t t-esc="event.seats_available"/></p>
                <p class="mb-2">Seats expected: <t t-esc="event.seats_expected"/></p>
            </div>
        </xpath>
    </template>
    <template id="hide_tickets_not_for_sale" inherit_id="website_event.registration_template" active="False" customize_show="True" name="Hide tickets not for sale">
        <xpath expr="//div[@id='o_wevent_tickets_collapse']//div" position="attributes">
            <attribute name="t-att-class">'row px-3 py-3 mx-0 bg-light border-bottom d-none' if not ticket.is_launched() or ticket.is_expired else 'row px-3 py-3 mx-0 bg-light border-bottom'</attribute>
        </xpath>
    </template>
</odoo>
