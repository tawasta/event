                class="custom-select waiting_list_select_multi form-select"
            >
                <t t-foreach="range(0, 10)" t-as="nb">
                    <option t-esc="nb" class="waiting_list_option_multi" />
                </t>
            </select>
            <input type="hidden" name="waiting_list_registration" value="True" />
        </xpath>

