<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="view_email_template_event_download_badge">
        <t t-set="lang" t-value="object.partner_id.lang or object.visitor_id.lang_id" />
        <div>
            Download your registration badge here:
            <a t-att-href="object.registration_badge_url" />
            <br />
            <div style="margin: 16px 0px 16px 0px;">
                <a
                    t-att-href="object.registration_badge_url"
                    style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">Download Badge</a>
            </div>
        </div>
    </template>
    <template
        id="view_email_template_subscription_with_cancel_download_badge"
        inherit_id="website_event_cancellation.view_email_template_subscription_with_cancel">
        <xpath
            expr="//t[@t-call='website_event_cancellation.view_email_template_event_cancellation']"
            position="before">
            <t
                t-call="website_event_cancellation.view_email_template_event_cancellation"
                t-lang="object.partner_id.lang or object.visitor_id.lang_id"
            />

        </xpath>
    </template>
</odoo>
