<?xml version="1.0"?>
<odoo>
    <record id="view_event_type_form_image" model="ir.ui.view">
        <field name="name">event.type.form.image</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event.view_event_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="before">
                <field name="banner_image" widget="image" class="oe_event_image"/>
            </xpath>
        </field>
    </record>
    <record id="view_event_form_image" model="ir.ui.view">
        <field name="name">event.event.form.image</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="before">
                <field name="banner_image" widget="image" class="oe_event_image"/>
            </xpath>
        </field>
    </record>
</odoo>
