<?xml version="1.0" ?>
<odoo>
    <!-- EVENT.EVENT VIEWS -->
    <record id="view_event_form_disable_quick_create_mail" model="ir.ui.view">
        <field name="name">event.event.form.disable.quick.create.mail</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form" />
        <field name="arch" type="xml">
            <field name="template_ref" position="attributes">
                <attribute
                    name="options"
                >{'no_quick_create':True,'no_create_edit':True, 'no_create': True, 'no_open': True}</attribute>
            </field>
        </field>
    </record>
</odoo>
