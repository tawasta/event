<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="registration_template"
        inherit_id="website_event.registration_template"
    >
        <xpath
            expr="//button[@data-bs-target='#modal_ticket_registration']"
            position="attributes"
        >
            <attribute name="t-if">not website.is_public_user() and event.event_registrations_open</attribute>
        </xpath>

        <xpath
            expr="//button[@data-bs-target='#modal_ticket_registration']"
            position="after"
        >
            <t t-call="website_sale_force_login.product_login_buttons" />
        </xpath>

    </template>

</odoo>
