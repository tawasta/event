<?xml version="1.0"?>
<odoo>
    <record id="view_event_form_description" model="ir.ui.view">
        <field name="name">event.event.form.description</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <field name="description"/>
            </xpath>
            <xpath expr="//div[@name='button_box']//button[1]" position="before">
                <label for="website_published" string="Published"/>
                <field name="website_published" nolabel="1" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
