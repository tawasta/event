<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_event_track_all" model="ir.actions.act_window">
        <field name="name">All tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('type.attendable', '=', True)]</field>
    </record>

    <record id="action_event_track_draft" model="ir.actions.act_window">
        <field name="name">Proposed tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'draft'),('type.attendable', '=', True)]</field>
    </record>

    <record id="action_event_track_confirmed" model="ir.actions.act_window">
        <field name="name">Confirmed tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'confirmed'),('type.attendable', '=', True)]</field>
    </record>

    <record id="action_event_track_announced" model="ir.actions.act_window">
        <field name="name">Announced tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'announced'),('type.attendable', '=', True)]</field>
    </record>

    <record id="action_event_track_published" model="ir.actions.act_window">
        <field name="name">Published tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'published'),('type.attendable', '=', True)]</field>
    </record>

    <record id="action_event_track_refused" model="ir.actions.act_window">
        <field name="name">Refused tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'refused'),('type.attendable', '=', True)]</field>
    </record>

    <record id="action_event_track_cancel" model="ir.actions.act_window">
        <field name="name">Cancelled tracks</field>
        <field name="res_model">event.track</field>
        <field name="view_mode">tree,kanban,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'cancel'),('type.attendable', '=', True)]</field>
    </record>

    <menuitem
            id="menu_event_track_list"
            name="Track lists"
            parent="event.event_main_menu"
            sequence="11"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_reviews"
            name="Track reviews"
            parent="event.event_main_menu"
            sequence="12"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_all"
            name="All tracks"
            action="action_event_track_all"
            parent="menu_event_track_list"
            sequence="10"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_draft"
            name="Proposed"
            action="action_event_track_draft"
            parent="menu_event_track_list"
            sequence="20"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_confirmed"
            name="Confirmed"
            action="action_event_track_confirmed"
            parent="menu_event_track_list"
            sequence="30"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_announced"
            name="Announced"
            action="action_event_track_announced"
            parent="menu_event_track_list"
            sequence="40"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_published"
            name="Published"
            action="action_event_track_published"
            parent="menu_event_track_list"
            sequence="50"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_refused"
            name="Refused"
            action="action_event_track_refused"
            parent="menu_event_track_list"
            sequence="60"
            groups="event.group_event_manager"/>

    <menuitem
            id="menu_event_track_list_cancel"
            name="Cancelled"
            action="action_event_track_cancel"
            parent="menu_event_track_list"
            sequence="70"
            groups="event.group_event_manager"/>

</odoo>