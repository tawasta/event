                                    <t t-set="link_message">
                                        If you wish to cancel your registration, follow the link below:
                                    </t>
                                    <t t-set="button_message">Cancel registration</t>
                                </t>
                                <t
                                    t-call="website_event_cancellation.view_email_template_event_calendar"
