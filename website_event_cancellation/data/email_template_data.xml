<?xml version="1.0" ?>
<odoo>
    <data noupdate="0">
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                    eval="[('module', '=', 'event'), ('name', '=', 'event_subscription')]"
                />
            </function>
            <value eval="{'noupdate': False}" />
        </function>
        <record id="event.event_subscription" model="mail.template">
            <field name="name">Event: Registration Confirmation Mail</field>
            <field name="body_type">qweb</field>
            <field
                name="body_view_id"
                ref="website_event_cancellation.email_template_subscription_with_cancel"
            />
            <field
                name="model_id"
                ref="website_event_cancellation.model_event_registration"
            />
            <field name="subject">Your registration at ${object.event_id.name}</field>
            <field
                name="email_from">${(object.event_id.organizer_id.email_formatted or object.event_id.user_id.email_formatted or '') | safe}</field>
            <field
                name="email_to">${(object.email and '"%s" &lt;%s&gt;' % (object.name, object.email) or object.partner_id.email_formatted or '') | safe}</field>
            <field
                name="lang">${object.partner_id.lang or object.visitor_id.lang_id or 'fi_FI'}</field>
        </record>
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                    eval="[('module', '=', 'event'), ('name', '=', 'event_reminder')]"
                />
            </function>
            <value eval="{'noupdate': False}" />
        </function>
        <record id="event.event_reminder" model="mail.template">
            <field name="name">Event: Reminder Mail</field>
            <field name="body_type">qweb</field>
            <field
                name="body_view_id"
                ref="website_event_cancellation.email_template_reminder_with_cancel"
            />
            <field
                name="model_id"
                ref="website_event_cancellation.model_event_registration"
            />
            <field
                name="subject">${object.event_id.name}: ${object.get_date_range_str()}</field>
            <field
                name="email_from">${(object.event_id.organizer_id.email_formatted or object.event_id.user_id.email_formatted or '') | safe}</field>
            <field
                name="email_to">${(object.email and '"%s" &lt;%s&gt;' % (object.name, object.email) or object.partner_id.email_formatted or '') | safe}</field>
            <field
                name="lang">${object.partner_id.lang or object.visitor_id.lang_id or 'fi_FI'}</field>
        </record>
    </data>
</odoo>
