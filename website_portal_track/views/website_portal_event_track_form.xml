<odoo>
    <!-- Track followup breadcrumbs -->
    <template id="track_followup_breadcrumbs">
        <div class="row">
            <div class="col-sm-4">
                <ol class="breadcrumb mt8">
                    <li>
                        <a href="/my/home">
                            <i class="fa fa-home"/>
                        </a>
                    </li>
                    <li>
                        <a href="/my/tracks">Tracks</a>
                    </li>
                </ol>
            </div>
        </div>
    </template>

    <!-- Default followup -->
    <template id="tracks_followup" name="Track">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="oe_structure">

                        <t t-call="website_portal_track.track_followup_breadcrumbs" />

                        <section name="call-for-papers-language" id="call-for-papers-language">
                            <t t-call="website.language_selector" />
                        </section>

                        <section id="forms">
                            <form id="track-application-form"
                                  class="form-horizontal mt32 js_website_submit_form"
                                  t-attf-action="/my/tracks/save/#{track.id}"
                                  method="post"
                                  enctype="multipart/form-data">

                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token(time_limit=False)"/>
                                <input type="hidden" id="application_state" name="state" t-att-value="track['state']"/>

                                <!-- Call the full form for edit, but hide and disable irrelevant parts -->
                                <t t-call="website_event_track_advanced.event_track_application"/>

                                <script type="text/javascript" src="/website_portal_track/static/src/js/application_edit.js?v100"></script>

                                <div t-if="track.state not in ['cancel', 'refused', 'published', 'confirmed']" class="form-group">
                                    <button type="submit"
                                           name="track-save"
                                           value="track-save"
                                           id="application-submit-button"
                                           class="application-submit-button btn btn-primary col-xs-10 col-xs-offset-1">Save as draft
                                    </button>

                                    <t t-if="user.partner_id.id == track.partner_id.id">
                                        <button t-if="track.state in ['draft', ''] or not track.state"
                                               type="submit"
                                               name="track-confirm"
                                               value="track-confirm"
                                               id="application-submit-button-send"
                                               class="application-submit-button btn btn-primary col-xs-10 col-xs-offset-1 mt8">Save and send
                                        </button>
                                    </t>
                                </div>
                            </form>
                        </section>

                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Followup for reviewers -->
    <template id="tracks_followup_reviewers" name="Track">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="oe_structure">

                        <t t-call="website_portal_track.track_followup_breadcrumbs" />

                        <section id="forms">
                            <form id="track-application-form"
                                  class="form-horizontal mt32 js_website_submit_form"
                                  t-attf-action="/my/tracks/save/#{track.id}"
                                  method="post"
                                  enctype="multipart/form-data">

                                <input type="hidden" name="csrf_token" id="csrf_token" t-att-value="request.csrf_token(time_limit=False)"/>
                                <input type="hidden" id="application_state" name="state" t-att-value="track['state']"/>

                                <t t-call="website_portal_track.event_track_application_reviewer" />

                                <!-- Rating section -->
                                <t t-call="website_portal_track.event_track_application_review" />

                                <script type="text/javascript" src="/website_portal_track/static/src/js/application_reviewer.js?v100"></script>

                                <div class="form-group">
                                    <button type="submit" id="application-submit-button"
                                            class="btn btn-primary col-xs-10 col-xs-offset-1">Save
                                    </button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
