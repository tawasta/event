<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Application form template for reviewers -->
    <template name="Event track application for reviewers" id="event_track_application_reviewer">
        <t t-call="website_event_track_advanced.event_track_application_type" />
        <t t-call="website_event_track_advanced.event_track_application_info" />
        <t t-call="website_event_track_advanced.event_track_application_targetgroup_info" />

        <script src="//cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/proposal.js?v100"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/track_content.js?v100"></script>
        <script type="text/javascript" src="/website_event_track_advanced/static/src/js/target_group_info.js?v100"></script>
    </template>

    <!-- Reviewer section -->
    <template id="event_track_application_review">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Review</h3>
            </div>

            <div class="panel-body">
                <div class="form-group" id="track-application-review-div">
                    <div class="col-md-4">
                        <label for="rating" class="control-label input-group">Rating</label>
                        <div class="stars">
                            <input class="star star-5" id="star-5" type="radio" name="rating" value="5"
                                   t-att-checked="'checked' if track.rating == '5' else False" />
                            <label class="star star-5" for="star-5"></label>
                            <input class="star star-4" id="star-4" type="radio" name="rating" value="4"
                                   t-att-checked="'checked' if track.rating == '4' else False" />
                            <label class="star star-4" for="star-4"></label>
                            <input class="star star-3" id="star-3" type="radio" name="rating" value="3"
                                   t-att-checked="'checked' if track.rating == '3' else False" />
                            <label class="star star-3" for="star-3"></label>
                            <input class="star star-2" id="star-2" type="radio" name="rating" value="2"
                                   t-att-checked="'checked' if track.rating == '2' else False" />
                            <label class="star star-2" for="star-2"></label>
                            <input class="star star-1" id="star-1" type="radio" name="rating" value="1"
                                   t-att-checked="'checked' if track.rating == '1' else False" />
                            <label class="star star-1" for="star-1"></label>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label for="rating_comment" class="control-label">Verbal rating</label>
                        <textarea class="form-control"
                                  id="rating_comment"
                                  name="rating_comment"
                                  rows="4"><t t-esc="track.rating_comment" /></textarea>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <!-- / Reviewer section -->

</odoo>
