<odoo>

    <template id="portal_my_home_menu_tracks" name="Portal layout : my tracks" inherit_id="website_portal.portal_layout" priority="25">
        <xpath expr="//ul[contains(@class,'o_portal_submenu')]" position="inside">
            <li>
                <a href="/my/tracks">Tracks</a>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_tracks" name="Portal My Home : my tracks" inherit_id="website_portal.portal_my_home" priority="25">
        <xpath expr="//div[contains(@class,'o_my_home_content')]" position="inside">
            <h3 class="page-header">
                <a href="/my/tracks">Your tracks
                    <small class="ml8">
                        <t t-if="track_count">
                            <span class='badge'><t t-esc="track_count"/></span>
                        </t>
                        <t t-if="not track_count">
                            There are currently no tracks for your account.
                        </t>
                    </small>
                </a>
            </h3>
        </xpath>
    </template>

    <template id="portal_my_tracks" name="My Tracks">
      <t t-call="website_portal.portal_layout">
        <h3 class="page-header">Your tracks</h3>
        <t t-if="not tracks">
            <p>There are currently no tracks for your account.</p>
        </t>
        <t t-if="tracks">
            <table class="table table-hover o_my_status_table">
                <thead>
                  <tr class="active">
                      <th>Track</th>
                      <th>Timeslot</th>
                      <th>State</th>
                    </tr>
                </thead>
                <t t-foreach="tracks" t-as="track">
                    <tr>
                        <td>
                            <!--<a t-attf-href="/my/tracks/#{track.id}?#{keep_query()}"><t t-esc="track.name"/></a>-->
                            <a t-att-href="'/web#model=event.track&amp;id=%s&amp;view_type=form' % (track.id)"><t t-esc="track.name"/></a>
                        </td>
                        <td>
                            <t t-if="track.date">
                                <span t-field="track.date" t-options='{"widget": "datetime"}'/>
                            </t>
                            <t t-if="not track.date">
                                -
                            </t>
                        </td>
                        <td>
                            <t t-set="track_state">label-info</t>

                            <t t-if="track.state == 'draft'">
                                <t t-set="track_state">label-primary</t>
                            </t>

                            <t t-if="track.state == 'confirmed'">
                                <t t-set="track_state">label-success</t>
                            </t>

                            <t t-if="track.state in ['refused', 'cancel']">
                                <t t-set="track_state">label-danger</t>
                            </t>

                            <span t-esc="track.state" t-attf-class="tag label {{track_state}}" />
                        </td>
                    </tr>
                </t>
            </table>
            <div t-if="pager" class="o_portal_pager text-center">
                <t t-call="website.pager"/>
            </div>
        </t>
      </t>
    </template>

   <template id="tracks_followup" name="Track">
      <t t-call="website.layout">
        <div id="wrap">
            <div class="container">
                <div class="oe_structure">
                    <div class="row">
                        <div class="col-sm-4">
                            <ol class="breadcrumb mt8">
                                <li><a href="/my/home"><i class="fa fa-home"/></a></li>
                                <li><a href="/my/tracks">Tracks</a></li>
                            </ol>
                        </div>
                    </div>

                    <h2 t-field="track.name"/>
                    <span t-field="track.description"/>

                    <a class="btn btn-info" t-att-href="'/web#model=event.track&amp;id=%s&amp;view_type=form' % (track.id)">Edit this track</a>
              </div>
            </div>
        </div>
      </t>
   </template>

</odoo>
