<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="registration_attendee_details_questions_title"
        inherit_id="website_event.registration_attendee_details"
        name="Registration Attendee Details with questions title"
    >
        <xpath expr="//div[@class='modal-header align-items-center']" position="after">
            <div t-if="event.registration_info" class="modal-body align-items-center">
                <i class="fa fa-exclamation fa-fw" /><p
                    class="text-muted"
                    t-field="event.registration_info"
                />
            </div>
        </xpath>
    </template>
</odoo>
