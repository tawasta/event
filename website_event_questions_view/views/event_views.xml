<?xml version="1.0"?>
<odoo>
    <!-- EVENT.QUESTION ACTIONS -->
    <record id="act_event_question_answers_from_event" model="ir.actions.act_window">
        <field name="res_model">event.registration.answer</field>
        <field name="name">Answers</field>
        <field name="view_mode">tree,kanban,pivot,graph</field>
        <field name="domain">[('event_id', '=', active_id)]</field>
        <field name="context">{'default_event_id': active_id, 'search_default_group_registration': 1}</field>
    </record>
    <!-- EVENT.EVENT VIEWS -->
    <record id="event_event_view_form_questions_list" model="ir.ui.view">
        <field name="name">event.event.view.form.questions.list</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="website_event_questions.event_event_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']//button[1]" position="before">
                <field name="has_answers" invisible="1"/>
                <button name="%(website_event_questions_view.act_event_question_answers_from_event)d" id="question_answers_button" type="action" class="oe_stat_button" icon="fa-question-circle" help="Question answers for this Event" attrs="{'invisible': [('has_answers', '!=', True)]}">
                    <field name="answer_count" widget="statinfo" string="Answers"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
