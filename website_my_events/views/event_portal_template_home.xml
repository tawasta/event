<?xml version="1.0" ?>
<odoo>
    <template
        id="portal_my_home_event"
        name="Show Events"
        inherit_id="portal.portal_my_home"
        customize_show="True"
        priority="30"
    >
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t
                    t-set="icon"
                    t-value="'/website_event/static/description/icon.svg'"
                />
                <t t-set="title">Events</t>
                <t t-set="text">View your upcoming and past events</t>
                <t t-set="url" t-value="'/my/events'" />
                <t t-set="placeholder_count" t-value="'event_count'" />
            </t>
        </div>
    </template>
</odoo>
