<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="registration_template_hide_free_text"
        inherit_id="website_event_sale.registration_template"
        active="True"
        customize_show="True"
        name="Hide free ticket text"
    >
        <xpath
            expr="//t[@t-if='ticket.price']//span[@t-field='ticket.price_reduce']//..//..//span[@t-else='']"
            position="replace"
        >
            <span t-else="" class="font-weight-bold text-uppercase" />
        </xpath>
        <xpath
            expr="//t[@t-if='tickets.price']//span[@t-field='tickets.price_reduce']//..//.."
            position="attributes"
        >
            <attribute name="t-if">tickets.price</attribute>
        </xpath>
    </template>
</odoo>
