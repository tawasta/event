<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="event_feedback" model="mail.template">
            <field name="name">Event: Feedback Mail</field>
            <field name="body_type">qweb</field>
            <field
                name="body_view_id"
                ref="event_feedback_survey.email_template_feedback"
            />
            <field name="model_id" ref="event.model_event_registration" />
            <field name="subject">${object.event_id.name}: Feedback Survey</field>
            <field
                name="email_from"
            >${(object.event_id.organizer_id.email_formatted or object.event_id.user_id.email_formatted or '') | safe}</field>
            <field
                name="email_to"
            >${(object.email and '"%s" &lt;%s&gt;' % (object.name, object.email) or object.partner_id.email_formatted or '') | safe}</field>
            <field
                name="lang"
            >${object.partner_id.lang or object.visitor_id.lang_id or 'fi_FI'}</field>
        </record>
    </data>
</odoo>
