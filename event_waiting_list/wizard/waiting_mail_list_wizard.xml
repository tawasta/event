<?xml version="1.0"?>
<odoo>
    <record model="ir.actions.act_window" id="action_waiting_mail_list_tree">
        <field name="name">Add to mailing list</field>
        <field name="res_model">event.waiting.mail.list.wizard</field>
        <field name="binding_model_id" ref="event.model_event_registration"/>
        <field name="view_mode">tree,form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="event_mail_list_wizard_form">
        <field name="name">event.waiting.mail.list.form</field>
        <field name="model">event.waiting.mail.list.wizard</field>
        <field name="arch" type="xml">
            <form string="Create registration mailing list">
                <group>
                    <field name="mail_list_id"/>
                </group>
                <footer>
                    <button string="Add registrations to mailing list" name="add_to_waiting_mail_list"
                        type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
