<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <act_window name="Add partners to mailing list"
                res_model="track.mail.list.wizard"
                src_model="event.track"
                view_mode="form"
                context="{'contact': 'partner'}"
                target="new"
                key2="client_action_multi"
                id="action_track_partners_mail_list"/>

    <act_window name="Add presenters to mailing list"
                res_model="track.mail.list.wizard"
                src_model="event.track"
                view_mode="form"
                context="{'contact': 'speaker'}"
                target="new"
                key2="client_action_multi"
                id="action_track_speakers_mail_list"/>

    <record model="ir.ui.view" id="track_mail_list_wizard_form">
        <field name="name">track.mail.list.form</field>
        <field name="model">track.mail.list.wizard</field>
        <field name="arch" type="xml">
            <form string="Create contact mailing list">
                <group>
                    <field name="mail_list_id"/>
                </group>
                <footer>
                    <button string="Add contacts to mailing list" name="add_to_mail_list"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>