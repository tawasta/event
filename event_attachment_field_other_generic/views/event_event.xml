<odoo>
    <record id="view_event_form_inherit" model="ir.ui.view">
        <field
            name="name"
        >event.event.form.inherit.event.other.generic.attachment</field>
        <field name="model">event.event</field>
        <field
            name="inherit_id"
            ref="event_attachment_field_base.view_event_form_inherit"
        />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_event_attachments']" position="inside">
                <group>
                    <field
                        name="other_generic_attachment_id"
                        context="{ 'default_public': True}"
                    />
                    <field
                        name="other_generic_attachment_url"
                        widget="CopyClipboardChar"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
