<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="event_track_application"
        inherit_id="website_event_track_advanced.event_track_application"
        name="Event Track Application privacy values"
    >
        <xpath
            expr="(//div[@class='modal-footer border-0 justify-content-between'])"
            position="before"
        >
            <t t-if="not track">
                <div class="modal-body bg-light border-bottom">
                    <div class="row">
                        <div class="col-lg-12">
                            <t t-if="event.privacy_ids">
                                <t t-foreach="event.sudo().privacy_ids" t-as="p">
                                    <div class="form-group col-xl-12">
                                        <div class="form-check">
                                            <input
                                                type="checkbox"
                                                class="form-check-input privacy_acceptance"
                                                t-attf-name="privacy_#{str(p.id)}"
                                                t-att-required="None if not p.is_required else 'required'"
                                            />
                                            <label
                                                t-att-class="'form-check-label label-optional' if not p.is_required else 'form-check-label'"
                                            ><t t-esc="p.name" /><t t-if="p.link"> - <a
                                                        t-att-href="p.link"
                                                        target="_blank"
                                                    ><t
                                                            t-esc="p.link_name"
                                                        /></a></t></label>
                                        <div
                                                class="invalid-feedback"
                                            >Please accept these terms.</div>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
